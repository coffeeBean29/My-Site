---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout title="Home">
  <nav class="navbar">
    <ul>
      <li>T</li>
      <li>I</li>
      <li>LI</li>
      <li>
        <button>Contact</button>
      </li>
    </ul>
  </nav>
  <main>
    <section class="hero">
      <div class="img-container">
        <img
          src="/images/Laney&Cooper.jpg"
          alt="Myself, Laney Tilgner, and my dog"
          class="image"
        />
      </div>
      <p>
        Hi there, I'm Laney. I am a UX Designer crafting user-centered designs
        that prioritize simplicity and elegance
      </p>
    </section>
    <section class="projects">
      <h2>Projects</h2>
      <ProjectCard
        title="Olive Health app"
        description="An easy to use app for helping users to better their health"
      />
      <ProjectCard title="Example app" description="Example description" />
    </section>
  </main>
</Layout>

<style>
  .navbar {
    padding-inline: 24px;
    box-shadow: 0.2px -0.2px 10px 0 rgba(0, 0, 0, 0.25);
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
  }
  .navbar ul {
    display: flex;
    justify-content: space-between;
    list-style-type: none;
    padding: 0;
  }
  .navbar ul li {
  }
  .img-container {
    aspect-ratio: 2/1;
    background-color: lightgrey;
    border-radius: 14px;
    overflow: hidden;
  }
  .image {
    width: 100%;
    object-fit: cover;
  }
</style>
